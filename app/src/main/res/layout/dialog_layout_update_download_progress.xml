<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingStart="?attr/dialogPreferredPadding"
        android:paddingEnd="?attr/dialogPreferredPadding"
        android:orientation="vertical">

    <ProgressBar
            android:id="@+id/progress_bar_download_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:max="100"
            app:layout_constraintTop_toTopOf="parent"
            style="?android:attr/progressBarStyleHorizontal" />

    <TextView
            android:id="@+id/text_download_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/starting_download"
            app:layout_constraintEnd_toEndOf="@+id/progress_bar_download_progress"
            app:layout_constraintTop_toBottomOf="@+id/progress_bar_download_progress" />
</androidx.constraintlayout.widget.ConstraintLayout>